#!/usr/bin/env sh

. ./.env

touch "./var/${DB_DATABASE}" \
&& docker compose up -d --build \
&& ./bin/docker/app/composer install \
&& ./bin/docker/app/migrate \
&& ./bin/docker/node/npm install \
&& ./bin/docker/node/npm run dev \
&& ./bin/docker/app/console app:create-admin \
&& docker compose stop \
&& touch .env.local
