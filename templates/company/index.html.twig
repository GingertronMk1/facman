{% extends 'base.html.twig' %}

{% block header %}
    <h1 class="col">Companies</h1>
    <a href="{{ path('company.create') }}" class="btn btn-primary col-1 my-auto">Add <i class="fa-solid fa-plus"></i></a>
{% endblock %}

{% block body %}

    <div class="row mt-3">
        <div class="col-2">Name</div>
        <div class="col-1">Prefix</div>
        <div class="col">Description</div>
        <div class="col-2">Created At</div>
        <div class="col-2">Updated At</div>
        <div class="col-1">Actions</div>
    </div>
{% for company in companies %}
    <div class="row mt-3">
        <div class="col-2">{{ company.name }}</div>
        <div class="col-1">{{ company.prefix }}</div>
        <div class="col">{{ company.description }}</div>
        <div class="col-2">{{ company.createdAt|date('d/m/Y H:i') }}</div>
        <div class="col-2">{{ company.updatedAt|date('d/m/Y H:i') }}</div>
        <div class="col-1 d-flex"><a class="ms-auto btn btn-outline-secondary" href="{{ path('company.update', {'id': company.id}) }}">Edit</a></div>
    </div>
{% endfor %}

{% endblock %}