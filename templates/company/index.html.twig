{% extends 'base.html.twig' %}

{% block body %}
<a href="{{ path('company.create') }}" class="btn btn-primary">Add <i class="fa-solid fa-plus"></i></a>

{% for company in companies %}
    <div class="row mt-3">
        <div class="col-6">{{ company.name }}</div>
        <div class="col-6">{{ company.description }}</div>
    </div>
{% endfor %}

{% endblock %}