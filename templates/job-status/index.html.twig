{% extends 'base.html.twig' %}

{% block header %}
    <h1 class="col">Companies</h1>
    <a href="{{ path('job-status.create') }}" class="btn btn-primary col-1 my-auto">Add <i class="fa-solid fa-plus"></i></a>
{% endblock %}

{% block body %}

    <div class="row mt-3">
        <div class="col-2">Name</div>
        <div class="col">Description</div>
        <div class="col-1">Colour</div>
        <div class="col-2">Created At</div>
        <div class="col-2">Updated At</div>
        <div class="col-1">Actions</div>
    </div>
{% for status in statuses %}
    <div class="row mt-3">
        <div class="col-2">{{ status.name }}</div>
        <div class="col">{{ status.description }}</div>
        <div class="col-1" style="background-color: {{ status.colour }}; color: {{ status.colour }}">{{ status.colour }}</div>
        <div class="col-2">{{ status.createdAt|date('d/m/Y H:i') }}</div>
        <div class="col-2">{{ status.updatedAt|date('d/m/Y H:i') }}</div>
        <div class="col-1 d-flex"><a class="ms-auto btn btn-outline-secondary" href="{{ path('job-status.update', {'id': status.id}) }}">Edit</a></div>
    </div>
{% endfor %}

{% endblock %}