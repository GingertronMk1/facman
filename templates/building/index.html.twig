{% extends 'base.html.twig' %}

{% block header %}
    <h1 class="col">Buildings</h1>
    <a href="{{ path('building.create') }}" class="btn btn-primary col-1 my-auto">Add <i class="fa-solid fa-plus"></i></a>
{% endblock %}

{% block body %}

    <div class="row mt-3">
        <div class="col-2">Name</div>
        <div class="col-2">Company</div>
        <div class="col">Description</div>
        <div class="col-2">Created At</div>
        <div class="col-2">Updated At</div>
        <div class="col-1">Actions</div>
    </div>
{% for building in buildings %}
    <div class="row mt-3">
        <div class="col-2">{{ building.name }}</div>
        <div class="col-2">{{ building.site.name }}</div>
        <div class="col">
            {{ building.description }}
            {{ building.addresses|json_encode }}
        </div>
        <div class="col-2">{{ building.createdAt|date('d/m/Y H:i') }}</div>
        <div class="col-2">{{ building.updatedAt|date('d/m/Y H:i') }}</div>
        <div class="col-1 d-flex">
            <a class="ms-auto btn btn-outline-secondary"
               href="{{ path('building.update', {'id': building.id}) }}">
                Edit
            </a>
        </div>
    </div>
{% endfor %}

{% endblock %}