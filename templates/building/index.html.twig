{% extends 'base.html.twig' %}

{% block body %}
<a href="{{ path('building.create') }}" class="btn btn-primary">Add <i class="fa-solid fa-plus"></i></a>

    <div class="row mt-3">
        <div class="col-2">Name</div>
        <div class="col-2">Company</div>
        <div class="col-6">Description</div>
        <div class="col-2">Actions</div>
    </div>
{% for building in buildings %}
    <div class="row mt-3">
        <div class="col-2">{{ building.name }}</div>
        <div class="col-2">{{ building.site.name }}</div>
        <div class="col-6">{{ building.description }}</div>
        <div class="col-2 d-flex">
            <a class="ms-auto btn btn-outline-secondary"
               href="{{ path('building.update', {'id': building.id}) }}">
                Edit
            </a>
        </div>
    </div>
{% endfor %}

{% endblock %}