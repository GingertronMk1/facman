{% extends 'base.html.twig' %}

{% block header %}
    <h1 class="col">Floors</h1>
    <a href="{{ path('floor.create') }}" class="btn btn-primary col-1 my-auto">Add <i class="fa-solid fa-plus"></i></a>
{% endblock %}

{% block body %}

    <div class="row mt-3">
        <div class="col-2">Name</div>
        <div class="col-2">Company</div>
        <div class="col">Description</div>
        <div class="col-2">Created At</div>
        <div class="col-2">Updated At</div>
        <div class="col-1">Actions</div>
    </div>
{% for floor in floors %}
    <div class="row mt-3">
        <div class="col-2">{{ floor.name }}</div>
        <div class="col-2">{{ floor.building.name }}</div>
        <div class="col">{{ floor.description }}</div>
        <div class="col-2">{{ floor.createdAt|date('d/m/Y H:i') }}</div>
        <div class="col-2">{{ floor.updatedAt|date('d/m/Y H:i') }}</div>
        <div class="col-1 d-flex">
            <a class="ms-auto btn btn-outline-secondary"
               href="{{ path('floor.update', {'id': floor.id}) }}">
                Edit
            </a>
        </div>
    </div>
{% endfor %}

{% endblock %}